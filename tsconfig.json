{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "declaration": true,
    "baseUrl": "src",
    "noFallthroughCasesInSwitch": true,
    "strict": true
  }
}
