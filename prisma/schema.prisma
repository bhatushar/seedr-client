generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Torrent {
  filename      String
  type          String // Enum("torrent", "magnet")
  media_manager String // ENUM("sonarr", "radarr")
  status        String  @default("new") // ENUM("new", "uploaded", "downloading", "unzipping", "completed")
  seedr_id      Int?    @unique
  torrent_name  String? @unique

  @@unique([filename, media_manager])
  @@map("torrents")
}
